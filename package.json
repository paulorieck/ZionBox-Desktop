{
  "name": "zionbox-desktop",
  "tag": "v1.0.48",
  "version": "1.0.48",
  "description": "DESKTOP Module - This is a secured and decentralized file system on the web!",
  "main": "zionbox-desktop.js",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder --mac --win --linux --publish=always",
    "start": "electron ."
  },
  "author": "Grupo GWTK (www.gwtk.com.br)",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.0",
    "axios-cookiejar-support": "^0.5.0",
    "bcrypt": "3.0.4-napi",
    "chalk": "^2.4.2",
    "dev-null": "^0.1.1",
    "directory-tree": "^2.2.3",
    "electron-updater": "^4.1.2",
    "file-extension": "^4.0.5",
    "find-process": "^1.4.2",
    "fix-path": "^2.1.0",
    "ipfs-http-client": "^32.0.1",
    "nedb": "^1.8.0",
    "node-notifier": "^5.4.0",
    "node-watch": "^0.6.2",
    "os-locale": "^4.0.0",
    "random-hash": "^4.0.1",
    "tough-cookie": "^3.0.1",
    "ws": "^7.1.0"
  },
  "bin": {
    "zionboxdesktop": "./startup.js"
  },
  "keywords": [
    "client",
    "ipfs",
    "file manager",
    "decentralized",
    "decentralization",
    "aes256",
    "crypto",
    "ipfs",
    "interplanetary file system"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/paulorieck/ZionBox-Desktop.git"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "devDependencies": {
    "electron": "^6.0.2",
    "electron-builder": "^21.2.0"
  },
  "build": {
    "license": "LICENSE.txt",
    "appId": "com.zionbox.desktop",
    "mac": {
      "category": "public.app-category.utilities",
      "publish": [
        "github"
      ]
    },
    "files": [
      "**/*"
    ],
    "copyright": "©2019 GWTK LTDA",
    "dmg": {
      "icon": "build/icon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 380,
          "y": 240,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 122,
          "y": 240,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis-web",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "Grupo GWTK LTDA.",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "category": "Network;",
      "packageCategory": "Network;",
      "description": "ZionBox Desktop Client for Linux",
      "target": [
        "deb",
        "zip",
        "AppImage",
        "snap",
        "rpm"
      ],
      "maintainer": "Paulo André Rieck <paulo.rieck@gwtk.com.br>",
      "publish": [
        "github"
      ]
    }
  }
}
